{
    "name": "ユーチューブ見やすく！！",
    "description": "ユーチューブを見やすくします！！",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "css": [
                "index.css"
            ]
        },
        {
            "matches": [
                "https://www.youtube.com/watch*"
            ],
            "css": [
                "watch.css"
            ]
        }
    ]
}